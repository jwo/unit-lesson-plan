<%= simple_form_for @lesson do |f| %>
  <%= f.association :unit, collection: Unit.all.ordered %>
  <%= f.input :title %>
  <%= f.input :lesson_ids, as: :check_boxes, collection: Lesson.ordered, label_method: "full" %>
  <%= f.input :sort %>
  <%= f.input :body %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
